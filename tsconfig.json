{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*", "support/*", "@types/*"]
    },
    "declaration": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["dom"],
    "outDir": "./dist",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "isolatedModules": false,
    "noEmit": true,
    "allowJs": true,
    "jsx": "preserve",
    "sourceMap": true,
    "removeComments": false,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src", "@types", "__tests__"],

  "references": [{ "path": "../styleguide" }]
}
